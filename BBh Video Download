  <a class="contact" href="https://www.facebook.com/arishahmedtushar287" target="_blank">Contact CEO</a>  <script>
    const canvas = document.querySelector(".matrix");
    const ctx = canvas.getContext("2d");
    canvas.height = window.innerHeight;
    canvas.width = window.innerWidth;
    let letters = Array(256).join("1").split("");
    const draw = () => {
      ctx.fillStyle = "rgba(0, 0, 0, 0.05)";
      ctx.fillRect(0, 0, canvas.width, canvas.height);
      ctx.fillStyle = "#0f0";
      letters.map((y_pos, index) => {
        let text = String.fromCharCode(3e4 + Math.random() * 33);
        let x_pos = index * 10;
        ctx.fillText(text, x_pos, y_pos);
        letters[index] = y_pos > 758 + Math.random() * 1e4 ? 0 : y_pos + 10;
      });
    };
    setInterval(draw, 33);

    function downloadVideo() {
      const url = document.getElementById("url").value;
      if (!url) return alert("Please enter a YouTube URL.");
      window.open(`https://loader.to/en16/download/${encodeURIComponent(url)}`, '_blank');
    }
  </script></body>
